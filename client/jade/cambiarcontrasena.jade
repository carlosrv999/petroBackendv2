doctype html
html
  head
    title Log In
    meta(charset="UTF-8")
    script(src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js")
    script(src="../js/semantic.min.js")
    link(rel="stylesheet" type="text/css" href="../css/semantic.min.css")
    style.
      body {
        background-color: rgb(206, 203, 171);
        background-image: url("../css/image.jpg");
      }
      body > .grid {
        height: 100%;
      }
      .image {
        margin-top: -100px;
      }
      .column {
        max-width: 450px;
      }
  body
    div.ui.middle.aligned.center.aligned.grid
      div.column
        h2.ui.teal.image.header
          img.image(src='../css/logo.png')
          div.content Reset password:
        .ui.container#message
          if mostrarMensaje && mostrarTitulo
            .ui.message
              i.close.icon
              .header
                | #{mostrarTitulo}
              p
                | #{mostrarMensaje}
        form.ui.large.form(action="/cambiarPass" id="form_login"  method='post')
          input(type='hidden', name='access_tok', value="#{messageTok}")
          div.ui.stacked.segment
            .field
              .ui.left.icon.input
                i.bullseye.icon
                input(type='password', name='password', placeholder='Contrase単a')
            .field
              .ui.left.icon.input
                i.bullseye.icon
                input(type='password', name='password1', placeholder='Confirme su contrase単a')
            input.ui.fluid.large.teal.submit.button(type='submit', value='Reset Password')
            .ui.error.message
        

    

  script.
    $(".message .close").on("click",function(){
      $(this)
        .closest(".message")
        .transition("fade");
    });

    if(!{modo}){
      $(".ui.message").addClass("positive");
    }else{
      $(".ui.message").addClass("negative");
    }

  script.
    $(".form")
      .form({
        on:'blur',
        fields:{
          password:{
            identifier:'password',
            rules:[{
              type:'empty',
              prompt:'Ingrese una contrase単a'
            }]
          },
          password1:{
            identifier:'password1',
            rules:[{
              type:'match[password]',
              prompt:'Las contrase単as no concuerdan'
            }]
          }
        }
      });
      //$("#form_login").submit();