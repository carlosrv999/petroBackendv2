  script.
    $(".form")
      .form({
        inline:true,
        on:'blur',
        fields:{
          nombre:{
            identifier:'nombre',
            rules:[{
              type:'empty',
              prompt:'Ingrese un nombre'
            }]
          },
          latitud:{
            identifier:'latitud',
            rules:[{
              type:'number',
              prompt:'Ingrese una latitud valida (-90.000000 a +90.000000) (ejemplo: -55.254769 )'
            }]
          },
          longitud:{
            identifier:'longitud',
            rules:[{
              type:'number',
              prompt:'Ingrese una longitud valida (-180.000000 a +180.000000)(ejemplo: -168.554178 )'
            }]
          }
        }
      });
  
  script.
    $("#input_submit").on('click',function(){
      $('.ui.small.modal')
      .modal({
        closable : false,
        onApprove : function(){
          $("#form_editar").submit();
        }
      })
      .modal('show');
    });
  #map
  script.
    
    var mapGoogle = document.getElementById('map');
    var centro = {
      lat : -12.046775,
      lng : -77.042820
    };
    var map;
    var markers = [];
    var latitud;
    var longitud;
    function initMap(){
      map = new google.maps.Map(mapGoogle,{
      center: centro,
      zoom: 12,
      mapTypeControl : false,
        streetViewControl : false,
        zoomControlOptions : {
          position : google.maps.ControlPosition.RIGHT_TOP
        }
      });
      
      var marcadorInicial = new google.maps.Marker({
        position: {
          lat : #{messageLat},
          lng : #{messageLng}
        },
        map : map,
        title : 'Posicion Actual',
        icon : 'http://maps.google.com/mapfiles/ms/icons/green-dot.png'
      });

      map.addListener('click', function(event) {
        $("#label_mapa").text("");
        
        latitud = event.latLng.lat();
        longitud = event.latLng.lng();
        $("#input_latitud").attr("value",latitud);
        $("#input_longitud").attr("value",longitud);
        deleteMarkers();
        addMarker(event.latLng);
      });
      
    }
    function addMarker(location) {
      var marker = new google.maps.Marker({
        position: location,
        map: map
      });
      markers.push(marker);
    }
    function setMapOnAll(map) {
      for (var i = 0; i < markers.length; i++) {
        markers[i].setMap(map);
      }
    }
    function clearMarkers() {
      setMapOnAll(null);
    }
    function deleteMarkers() {
      clearMarkers();
      markers = [];
    }
    
    
    
  script(async='', defer='', src='https://maps.googleapis.com/maps/api/js?key=AIzaSyCAX91_ercE3wCCrvRdXlvIeEYxTPg897I&signed_in=true&libraries=places&callback=initMap')
  
  
  
